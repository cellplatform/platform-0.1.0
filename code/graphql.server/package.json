{
  "name": "@platform/graphql.server",
  "version": "0.1.171",
  "description": "Express configuration of Apollo server.",
  "main": "lib/index",
  "types": "lib/index.d.ts",
  "scripts": {
    "start": "yarn build-test && node lib.test/test/server/start",
    "watch": "yarn build-test && nodemon lib.test/test/server/start",
    "test": "ts test",
    "tdd": "ts test --watch",
    "lint": "ts lint",
    "build": "ts build --no-esm",
    "build-test": "ts build --no-esm --tsconfig=tsconfig.test $@",
    "prepare": "ts prepare"
  },
  "dependencies": {
    "@platform/cache": "0.3.28",
    "@platform/graphql": "0.2.156",
    "@platform/libs": "0.3.1",
    "@platform/log": "0.1.63",
    "@platform/util.is": "0.0.163",
    "@platform/util.value": "0.9.11",
    "@types/dotenv": "8.2.0",
    "@types/express": "4.17.13",
    "apollo-server-express": "3.3.0",
    "dotenv": "10.0.0",
    "express": "4.17.1",
    "graphql": "15.5.2",
    "graphql-tools": "8.1.0"
  },
  "devDependencies": {
    "@platform/auth": "0.1.104",
    "@platform/test": "0.3.1",
    "@platform/ts": "4.7.5"
  },
  "files": [
    "lib",
    "!lib/test",
    "!*.TEST.{js, mjs, d.ts}",
    "!*.INTEGRATION.{js, mjs, d.ts}"
  ],
  "license": "MIT"
}
